
@{
    ViewData["Title"] = "课程列表";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title> - 项目</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <link rel="shortcut icon" href="favicon.ico">
    <link href="~/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="~/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css?v=4.1.0" rel="stylesheet">
</head>
<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInUp">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>所有项目</h5>
                        <div class="ibox-tools">
                            <a data-toggle="modal" href="projects.html#modal-form" class="btn btn-primary btn-xs">创建新课程</a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row m-b-sm m-t-sm">
                            <div class="col-md-1">
                                <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> 刷新</button>
                            </div>
                            <div class="col-md-11">
                                <div class="input-group">
                                    <input type="text" placeholder="请输入项目名称" class="input-sm form-control"> <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary"> 搜索</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="project-list">
                            <table class="table table-hover">
                                <tbody class="tbody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div id="modal-form" class="modal fade" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-9 b-r">
                            <h3 class="m-t-none m-b">课程添加</h3>
                            @*<form role="form">*@
                            <div class="form-group">
                                <label>课程名：</label>
                                <input type="text" id="courseName" placeholder="课程名" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>学时：</label>
                                <input type="text" id="coursePeriod" placeholder="学时" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>所属专业：</label>
                                <input type="text" id="majorId" placeholder="专业编号" class="form-control">
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    所属专业编号对应列表
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu " aria-labelledby="dropdownMenu1">
                                    <li><a href="#">计算机科学与技术—1</a></li>
                                    <li><a href="#">软件工程</a></li>
                                    <li><a href="#">通信工程</a></li>
                                </ul>
                            </div>
                            <div class="form-group">
                                <label>创建时间：</label>
                                <input type="text" id="createTime" placeholder="创建时间" class="form-control">
                            </div>
                            <div>
                                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" id="btnSave" type="button">
                                    <strong>保存</strong>
                                </button>
                            </div>
                            @* </form>*@
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 全局js -->
    <script src="~/js/jquery.min.js?v=2.1.4"></script>
    <script src="~/js/bootstrap.min.js?v=3.3.6"></script>

    <!-- 自定义js -->
    <script src="~/js/content.js?v=1.0.0"></script>

    <script>
        $(document).ready(function () {

            $('#loading-example-btn').click(function () {
                btn = $(this);
                simpleLoad(btn, true)

                // Ajax example
                //                $.ajax().always(function () {
                //                    simpleLoad($(this), false)
                //                });
                simpleLoad(btn, false)
            });
            f_Refresh();

            $("#btnSave").click(function () {

                alert($("#coursePeriod").val());

                var course = new Object();

                course.coursePeriod = $("#coursePeriod").val();
                course.courseName = $("#courseName").val();
                course.majorId = $("#majorId").val();
                course.createTime = $("#createTime").val();
                alert(JSON.stringify(course));

                $.ajax({
                    type: 'POST',
                    url: "/Course/AddCourse",
                    //data: JSON.stringify(course),
                    data: {
                        coursePeriod: $("#coursePeriod").val(),
                        courseName: $("#courseName").val(),
                        majorId: $("#majorId").val()
                    },
                    dataType: "JSON",
                    //contentType: "application/json",
                    success: function (result) {
                        alert(result.msg);
                        f_Refresh();
                        //alert(result.name + " sex:" + result.sex);
                        //if (ref.code > 0) {
                        //window.location.href = "/Home/Index";
                        //}
                    },
                    error: function (result) {
                        // layer.msg(ref.msg);
                    }
                })

            })

            function f_Refresh() {
                $.get('GetCourseList', function (data) {
                    var data = eval(data);
                    //alert(data[0].courseName);
                    //alert(data);
                    for (var i = 0; i < data.length; i++) {
                        //alert(data[i].courseName)
                        var str = "<tr>" +
                            "<td class=\"project-status\">" +
                            "<span class=\"label label-primary\">开课中" +
                            "</td>" +
                            "<td class=\"project-title\">" +
                            " <a href=\"project_detail\">" + data[i].courseName + "</a>" +
                            " <br />" +
                            " <small>创建时间：" + data[i].createTimeStr + "</small>" +
                            " </td>" +
                            " <td class=\"project-completion\">" +
                            "<small>总学时：" + data[i].coursePeriod + "</small>" +
                            "<div class=\"progress progress-mini\">" +
                            "  <div style=\"width: 100%;\" class=\"progress-bar\"></div>" +
                            "</div>" +
                            "</td>" +
                            "<td class=\"project-datas\">" +
                            " <small>学习资料</small>" +
                            " <div class=\"progress progress-mini\">" +
                            "   <div style=\"width: 10%; \" class=\"progress-bar\"></div>" +
                            "  </div>" +
                            "</td> " +

                            " <td class=\"project-actions\">" +
                            " <a href=\"/Course/Project_detail?courseId=" + data[i].courseId + "\" class=\"btn btn-white btn-sm\"><i class=\"fa fa-folder\"></i> 查看 </a>" +
                                " <a href=\"javascript: void (0); \" onclick =\"f_DeteCourse(" + data[i].courseId + ")\" class=\"btn btn-white btn-sm\"><i class=\"fa fa-pencil\"></i> 删除 </a>" +
                                    "</td>"
                        "</tr>";
                        //onclick ="f_FindCourse(${data[i].courseId})"
                        $(".tbody").after(str);
                    }
                });
            }

        });

        function f_DeteCourse(courseId) {
            alert("delet:" + courseId);
            $.ajax({
                type: 'DELETE',
                url: '/Course/DeteCourse?courseId=' + courseId,
                dataType: 'Json',
                success: function (result) {
                    alert(result.msg);
                    f_Refresh();
                },
                error: function (result) {
                    alert(result.msg);
                }
            })
        }

        //function f_FindCourse(courseId) {
        //    alert("find:" + courseId);
        //    $.ajax({
        //        type: 'GET',
        //        url: '/Course/FindCourse?courseId=' + courseId,
        //        dataType: 'Json',
        //        success: function (result) {
        //            window.location.href = '/Course/Project_detail?courseId=' + courseId
        //        },
        //        error: function (result) {
        //            alert(result.msg);
        //        }
        //    })
        //}


        function simpleLoad(btn, state) {
            if (state) {
                btn.children().addClass('fa-spin');
                btn.contents().last().replaceWith(" Loading");
            } else {
                setTimeout(function () {
                    btn.children().removeClass('fa-spin');
                    btn.contents().last().replaceWith(" Refresh");
                }, 2000);
            }
        }</script>

</body>
</html>


